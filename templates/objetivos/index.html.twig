{% extends 'layout.html.twig' %}

{% block title %}Objetivos de Calorías{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card mb-4">
                <div class="card-body">
                    <h1 class="card-title text-center mb-4">Calorias recomendadas</h1>
                    <br>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card text-center border border-success rounded-lg">
                                <div class="card-body">
                                    <h2 class="card-title">Déficit</h2>
                                    <p class="card-text fs-5">Calorías recomendadas: {{ caloriasDeficit }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card text-center border border-success rounded-lg">
                                <div class="card-body">
                                    <h2 class="card-title">Mantenimiento</h2>
                                    <p class="card-text fs-5">Calorías recomendadas: {{ caloriasMantenimiento }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card text-center border border-success rounded-lg">
                                <div class="card-body">
                                    <h2 class="card-title">Superávit</h2>
                                    <p class="card-text fs-5">Calorías recomendadas: {{ caloriasSuperavit }}</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <div class="card">
                        <div class="card-body">
                            <h2 class="card-title text-center">¿Cuál es tu objetivo?</h2>
                            <form id="objetivo-form" method="post" action="{{ path('app_objetivos') }}">
                                <div class="form-group">
                                    <label for="objetivo_calorias" class="fs-5">Calorías Objetivo:</label>
                                    <input type="number" id="objetivo_calorias" name="objetivo_calorias" class="form-control" required>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block">Calcular calorías</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
